JAR_INSTALL = ./

JAVAC = javac
JAVAH = javah
JAVAD = javadoc
JAR   = jar

TOPDIR = ../../../../..
JARDIR = $(TOPDIR)/jar
JARS = $(JARDIR)/jca-2.1.5.jar

INSTALL  = $(TOPDIR)/install-sh -c
JAVAC_FLAGS = -classpath $(TOPDIR)/:$(JARS)

JAVA_OBJS = \
	CA.class

all: $(JAVA_OBJS)

install: install-jar

install-jar: $(JAVA_OBJS)
	@echo "Jarring .class files"
	$(JAR) cf File.jar *.class
	@if [ ! -d $(JAR_INSTALL) ]; then \
	  echo "Making directory $(JAR_INSTALL)"; \
	  mkdir $(JAR_INSTALL); \
	fi;
	@echo "Installing File.jar in $(JAR_INSTALL)"
	@$(INSTALL) File.jar $(JAR_INSTALL)/File.jar

clean: 
	rm -f core *~ *.class

# SUFFIX RULES

.SUFFIXES: .java .class

.java.class:
	$(JAVAC) $< $(JAVAC_FLAGS)
