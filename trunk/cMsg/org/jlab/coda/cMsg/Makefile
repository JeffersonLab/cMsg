JAR_INSTALL = ./

JAVAC = javac
JAVAH = javah
JAVAD = javadoc
JAR   = jar

INSTALL  = ../../../../../install-sh -c
JAVAC_FLAGS = -classpath ../../../../
#JAVAC_FLAGS = -classpath ../../../../:$(CLASSPATH)

JAVA_OBJS = \
	cMsgException.class \
	cMsgMessage.class \
	cMsgConstants.class \
	cMsgCallback.class \
	cMsgCallbackAdapter.class \
	cMsgInterface.class \
	cMsgAdapter.class

all: $(JAVA_OBJS)

install: install-jar

install-jar: $(JAVA_OBJS)
	@echo "Jarring .class files"
	$(JAR) cf cMsg.jar *.class
	@if [ ! -d $(JAR_INSTALL) ]; then \
	  echo "Making directory $(JAR_INSTALL)"; \
	  mkdir $(JAR_INSTALL); \
	fi;
	@echo "Installing cMsg.jar in $(JAR_INSTALL)"
	@$(INSTALL) cMsg.jar $(JAR_INSTALL)/cMsg.jar

clean: 
	rm -f core *~ *.class

# SUFFIX RULES

.SUFFIXES: .java .class

.java.class:
	$(JAVAC) $< $(JAVAC_FLAGS)
